---
const issues = [
  "روشن نشدن دستگاه",
  "مشکل شارژ و باتری",
  "کندی سیستم و هنگ",
  "خرابی صفحه نمایش / تصویر",
  "گرمای زیاد و خاموشی ناگهانی",
  "خرابی کیبورد، تاچ پد یا پورت ها",
];
---
<section class="mt-10 rounded-3xl border border-white/10 bg-white/5 p-6 md:p-8">
  <div class="flex flex-col gap-2 md:flex-row md:items-end md:justify-between">
    <h2 class="text-xl font-bold md:text-2xl">ایرادات رایج دستگاه های سامسونگ</h2>
    <p class="text-sm text-slate-300">عیب یابی تخصصی + اعلام هزینه قبل از تعمیر</p>
  </div>

  <ul class="mt-5 grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
    {issues.map((it) => (
      <li class="rounded-2xl border border-white/10 bg-slate-950/40 p-4 text-sm text-slate-200">
        {it}
      </li>
    ))}
  </ul>
</section>
