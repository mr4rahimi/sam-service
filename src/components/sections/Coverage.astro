  // -------- Leaflet Lazy Load ----------
  let L;
  let map;
  let markers = new Map(); // id -> marker
  let markerLayer;
  let leafletLoaded = false;

  function addLeafletScript() {
    return new Promise((resolve, reject) => {
      if (leafletLoaded) return resolve();
      const s = document.createElement("script");
      s.src = "/vendor/leaflet/leaflet.js";
      s.defer = true;
      s.onload = () => {
        leafletLoaded = true;
        L = window.L;
        resolve();
      };
      s.onerror = reject;
      document.head.appendChild(s);
    });
  }

  function getCenterFromCard(card) {
    return {
      id: card.dataset.id,
      name: card.dataset.name,
      phone: card.dataset.phone,
      address: card.dataset.address,
      devicesLabel: card.dataset.devicesLabel || "",
      lat: parseFloat(card.dataset.lat || "0"),
      lng: parseFloat(card.dataset.lng || "0"),
    };
  }

  function buildRouteLink(center, userLatLng) {
    const dest = `${center.lat},${center.lng}`;
    if (userLatLng) {
      const origin = `${userLatLng.lat},${userLatLng.lng}`;
      // Google Maps directions
      return `https://www.google.com/maps/dir/?api=1&origin=${encodeURIComponent(origin)}&destination=${encodeURIComponent(dest)}`;
    }
    // fallback to destination only
    return `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(dest)}`;
  }

  async function ensureMap() {
    if (map) {
      // refresh sizing when revealed
      setTimeout(() => map.invalidateSize(true), 80);
      mapSkeleton?.classList.add("is-hidden");
      return;
    }

    mapSkeleton?.classList.remove("is-hidden");
    await addLeafletScript();

    const mapEl = document.getElementById("map");
    if (!mapEl || !L) return;

    // Default center: Tehran
    map = L.map(mapEl, { scrollWheelZoom: false, tap: false }).setView([35.715298, 51.404343], 11);

    // tiles (OSM)
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
      maxZoom: 19,
      attribution: "&copy; OpenStreetMap",
    }).addTo(map);

    markerLayer = L.layerGroup().addTo(map);

    // Add markers for currently visible cards
    syncMarkers();

    mapSkeleton?.classList.add("is-hidden");
    setTimeout(() => map.invalidateSize(true), 120);
  }

  function syncMarkers() {
    if (!map || !L) return;
    markerLayer.clearLayers();
    markers.clear();

    const visibleCards = getCards().filter((c) => c.style.display !== "none");
    const bounds = [];

    visibleCards.forEach((card) => {
      const c = getCenterFromCard(card);
      if (!c.lat || !c.lng) return;

      const m = L.marker([c.lat, c.lng]).addTo(markerLayer);
