  // Nearest to me
  btnNearest?.addEventListener("click", async () => {
    btnNearest.setAttribute("aria-pressed", "true");
    try {
      if (!navigator.geolocation) throw new Error("no geo");

      const pos = await new Promise((resolve, reject) => {
        navigator.geolocation.getCurrentPosition(resolve, reject, { enableHighAccuracy: true, timeout: 7000 });
      });

      const user = { lat: pos.coords.latitude, lng: pos.coords.longitude };

      let best = null;
      let bestDist = Infinity;

      getCards().forEach((card) => {
        if (card.style.display === "none") return;
        const c = getCenterFromCard(card);
        const d =
          Math.hypot((c.lat - user.lat) * 111, (c.lng - user.lng) * 111); // quick approx
        if (d < bestDist) {
          bestDist = d;
          best = card;
        }
      });

      if (best) {
        focusCenter(best);
      } else {
        alert("Ù…Ø±Ú©Ø²ÛŒ Ø¨Ø±Ø§ÛŒ Ù†Ù…Ø§ÛŒØ´ ÛŒØ§ÙØª Ù†Ø´Ø¯.");
      }
    } catch (_) {
      alert("Ø¨Ø±Ø§ÛŒ ÛŒØ§ÙØªÙ† Ù†Ø²Ø¯ÛŒÚ©â€ŒØªØ±ÛŒÙ† Ù…Ø±Ú©Ø²ØŒ Ø¯Ø³ØªØ±Ø³ÛŒ Ù…ÙˆÙ‚Ø¹ÛŒØª Ù…Ú©Ø§Ù†ÛŒ Ø±Ø§ ÙØ¹Ø§Ù„ Ú©Ù†ÛŒØ¯.");
    } finally {
