  // Rebuild markers after filter
  function applyAndSync() {
    applyFilter();
    if (map) syncMarkers();
  }
  btnApply?.addEventListener("click", applyAndSync);
  btnReset?.addEventListener("click", () => {
    resetFilter();
    if (map) syncMarkers();
