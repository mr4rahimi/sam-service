<script is:inline>
  // -------- Locator UI (filter + map) ----------
  const locator = document.getElementById("locator");
  const q = document.getElementById("q");
  const device = document.getElementById("device");
  const btnApply = document.getElementById("btnApply");
  const btnReset = document.getElementById("btnReset");
  const btnNearest = document.getElementById("btnNearest");
  const btnShowMap = document.getElementById("btnShowMap");
  const tabList = document.getElementById("tabList");
  const tabMap = document.getElementById("tabMap");
  const listEl = document.getElementById("centersList");
  const countEl = document.getElementById("count");
  const mapSection = document.getElementById("mapSection");
  const mapSkeleton = document.getElementById("mapSkeleton");

  function norm(s) {
    return (s || "")
      .toString()
      .trim()
      .toLowerCase()
      .replace(/[â€Œ\u200c]/g, " ")
      .replace(/\s+/g, " ");
  }

  function getCards() {
    return Array.from(listEl?.querySelectorAll(".center-card") || []);
  }

  function applyFilter() {
    const query = norm(q?.value);
    const dev = device?.value || "";

    let shown = 0;
    getCards().forEach((card) => {
      const name = norm(card.dataset.name);
      const addr = norm(card.dataset.address);
      const devices = (card.dataset.devices || "").split(",").map((x) => x.trim());
      const okQuery = !query || name.includes(query) || addr.includes(query);
      const okDev = !dev || devices.includes(dev);
      const show = okQuery && okDev;

      card.style.display = show ? "" : "none";
      if (show) shown++;
    });

    if (countEl) countEl.textContent = String(shown);
  }

  function resetFilter() {
    if (q) q.value = "";
    if (device) device.value = "";
    applyFilter();
  }

  btnApply?.addEventListener("click", applyFilter);
  btnReset?.addEventListener("click", resetFilter);
  q?.addEventListener("input", () => {
    // lightweight live search
    applyFilter();
  });

  // -------- Tabs (mobile) ----------
  function setView(view) {
    locator?.setAttribute("data-view", view);
    if (tabList) tabList.setAttribute("aria-pressed", view === "list" ? "true" : "false");
    if (tabMap) tabMap.setAttribute("aria-pressed", view === "map" ? "true" : "false");
    if (view === "map") ensureMap();
